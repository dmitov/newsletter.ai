{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "RESEND_AUDIENCE_ID",
    "RESEND_API_KEY",
    "TRIGGER_PROJECT_ID",
    "TRIGGER_SECRET_KEY",
    "AUTH_GITHUB_ID",
    "AUTH_GITHUB_SECRET",
    "APP_URL"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event"
  ]
}
